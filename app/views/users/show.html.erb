<h4>Welcome <%= @user.username %>!</h4>
<%= link_to "New Visit", new_user_visit_path(@user) %>
<div class="row align-items-center h-100">
    <div class="col-12 mx-auto">
        <div class="card h-100 justify-content-center">
            <table class="table">
                <tbody>
                    <% @visits.each do |visit| %>
                        <% if visit.user_id == current_user.id %>
                            <tr>
                                <td>Created: <%= visit.created_at %></td>
                                <td>Restaurant: <%= link_to visit.restaurant.name, restaurant_path(visit.restaurant.id) %></td>
                                <td>Visit Details: <%= visit.description %></td>
                            </tr>
                        <% end %>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
